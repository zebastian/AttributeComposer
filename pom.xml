<?xml version="1.0" encoding="UTF-8"?>
<project>
	<parent>
		<groupId>fr.soleil</groupId>
		<artifactId>super-pom</artifactId>
		<version>1.1</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>fr.soleil.deviceservers</groupId>
	<artifactId>AttributeComposer</artifactId>
	<name>Attribute Composer</name>
	<description>Attribute Composer Device Server</description>
	<version>3.0.6-SNAPSHOT</version>
	<scm>
		<connection>scm:cvs:pserver:tango-ds.cvs.sourceforge.net:/cvsroot/tango-ds:Calculation/AttributeComposer</connection>
		<developerConnection>scm:cvs:pserver:tango-ds.cvs.sourceforge.net:/cvsroot/tango-ds:Calculation/AttributeComposer</developerConnection>
		<url>http://tango-ds.cvs.sourceforge.net/tango-ds/Calculation/AttributeComposer</url>
	</scm>
	<build>
		<plugins>
			<plugin>
				<groupId>fr.soleil.maven.plugins</groupId>
				<artifactId>maven-script-plugin</artifactId>
				<executions>
					<execution>
						<id>install</id>
						<goals>
							<goal>generate</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>
						AttributeComposer.AttributeComposer
					</mainClass>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>fr.esrf.tango</groupId>
			<artifactId>TangORB</artifactId>
			<version>${TangORB.version}</version>
		</dependency>
		<dependency>
			<groupId>fr.soleil.lib</groupId>
			<artifactId>dtu</artifactId>
			<version>${dtu.version}</version>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>${log4j.version}</version>
		</dependency>
	</dependencies>
</project>